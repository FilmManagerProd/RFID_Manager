<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="2dp"
    android:background="#DDDDDD">

    <!-- Index -->
    <TextView
        android:id="@+id/tag_index"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.2"
        android:gravity="center"
        android:background="@android:color/white"
        android:text="Index"
        android:textAppearance="?attr/textAppearanceListItem"
        android:padding="4dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

    <!-- EPC -->
    <TextView
        android:id="@+id/tag_epc"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:text="EPC"
        android:textAppearance="?attr/textAppearanceListItem"
        android:paddingStart="6dp"
        android:paddingEnd="6dp" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB"
        android:visibility="gone" /> <!-- Hides divider after invisible TID -->

    <!-- TID -->
    <TextView
        android:id="@+id/tag_tid"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@android:color/white"
        android:text="TID"
        android:visibility="gone"
        android:textAppearance="?attr/textAppearanceListItem" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB"
        android:visibility="gone" /> <!-- Hides divider after invisible User -->

    <!-- User -->
    <TextView
        android:id="@+id/tag_user"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@android:color/white"
        android:text="User Data"
        android:visibility="gone"
        android:textAppearance="?attr/textAppearanceListItem" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB"
        android:visibility="gone" /> <!-- Hides divider after invisible Reserved -->

    <!-- Reserved -->
    <TextView
        android:id="@+id/tag_reserved"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@android:color/white"
        android:text="Reserved"
        android:visibility="gone"
        android:textAppearance="?attr/textAppearanceListItem" />

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#BBBBBB" />

    <!-- Count -->
    <TextView
        android:id="@+id/tag_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center"
        android:background="@android:color/white"
        android:text="Count"
        android:textAppearance="?attr/textAppearanceListItem"
        android:padding="4dp" />

</LinearLayout>